<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/scrollbar_shape_style"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".telangana.Adilabad.places.KunthalaWaterfall">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/back3"
            android:layout_width="30dp"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginTop="28dp"
            android:transitionName="@string/pressed4"
            android:elevation="30dp"
            android:layout_marginStart="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_height="30dp"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginLeft="40dp">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:text="KUNTHALA WATERFALL"
            android:textColor="#123"
            android:layout_marginStart="60dp"
            android:elevation="3dp"
            android:layout_marginEnd="60dp"
            android:textStyle="bold"
            android:textSize="23dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="-40sp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:gravity="center_horizontal">

        </TextView>

        <AdapterViewFlipper
            android:id="@+id/adpterview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="20dp"
            android:transitionName="@string/kawaliflipper"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            tools:targetApi="lollipop">

        </AdapterViewFlipper>
        <TextView
            android:layout_width="match_parent"
            android:text="History:"
            android:textColor="#123"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textSize="17dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content">

        </TextView>


        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="200dp">
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:text="Kuntala Waterfall is a waterfall in the indian state of Telangana, located on Kadam river in Neredigonda mandal of Adilabad district.[1] It is the highest waterfall in the state with a height of 50 meters.[2]
These waterfalls are in the dense forests inhabited by the Gonds. Kunta in Gondi and Telugu language means pond. Kuntalu means several ponds. The waterfall originates from a confluence of several ponds that lead to the river Kadem.[3]
Formed by the Kadam River, Kuntala falls cascades down through two steps and can be seen as two separate adjacent falls after the peak rains. It is one of the famous one day outings from Hyderabad. There is a motorable road until the entry point of the falls, from where steps are available to reach the bottom of the falls. The falls are about 10 minutes (one way) walk from the entry point."
                    android:textColor="#123"
                    android:textAlignment="textStart"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                </TextView>

            </ScrollView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/direction"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/states"
                android:backgroundTint="@color/white1"
                android:elevation="20dp"
                app:srcCompat="@drawable/ic_baseline_directions_24"
                tools:ignore="VectorDrawableCompat"
                tools:targetApi="lollipop">

            </ImageView>

            <ImageView
                android:id="@+id/hotels"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/states"
                android:backgroundTint="@color/white1"
                android:elevation="20sp"
                android:transitionName="@string/pressed4"
                app:srcCompat="@drawable/ic_baseline_house_24"
                tools:ignore="VectorDrawableCompat">

            </ImageView>

            <ImageView
                android:id="@+id/share"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/states"
                android:backgroundTint="@color/white1"
                android:elevation="20sp"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/ic_baseline_share_24"
                tools:ignore="VectorDrawableCompat">

            </ImageView>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:text="Details:"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#123"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:text="Weather : 40Â° C"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#123"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:layout_height="wrap_content">

        </TextView>




        <TextView
            android:layout_width="match_parent"
            android:text="Best Time: winter months"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#123"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="Entry Fee : "
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#123"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/hotel"
            android:text="Gallery:"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#123"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:gravity="start">

        </TextView>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/viewpager"
            android:layout_height="300dp">
        </androidx.viewpager.widget.ViewPager>






        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_above="@id/continues"
            android:id="@+id/viewpager1"
            android:layout_height="300dp">
        </androidx.viewpager.widget.ViewPager>




    </LinearLayout>

</ScrollView>