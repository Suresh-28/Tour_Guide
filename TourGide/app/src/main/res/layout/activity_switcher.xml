<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#040505"
    android:layout_height="match_parent"
    tools:context=".Switcher">


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="320dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="209dp"
            android:layout_marginBottom="539dp"
            android:gravity="center"
            android:text="Tour Guide"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transformPivotX="100dp"
            android:transformPivotY="270dp"
            android:transitionName="@string/pressed7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.89"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="155dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="158dp"
            android:layout_marginRight="158dp"
            android:layout_marginBottom="160dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.544"
            app:srcCompat="@drawable/symbol"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_below="@id/layout1"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="39dp"
            android:background="#050404">

        </androidx.viewpager.widget.ViewPager>

        <RadioGroup
            android:id="@+id/radigp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/continues"
            android:paddingBottom="40dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="26dp"
                android:layout_weight="1"
                android:scaleX="0.4"
                android:buttonTint="@color/white"
                android:scaleY="0.4"
                android:layout_height="20dp" />


            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="26dp"
                android:layout_weight="1"
                android:scaleX="0.4"
                android:buttonTint="@color/white"
                android:scaleY="0.4"
                android:layout_height="20dp" />


            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="26dp"
                android:layout_weight="1"
                android:buttonTint="@color/white"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:layout_height="20dp" />
        </RadioGroup>



        <Button
            android:id="@+id/continues"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:elevation="3sp"
            android:paddingTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="65dp"
            android:text="welcome"
            tools:ignore="UnusedAttribute">

        </Button>

    </RelativeLayout>





</RelativeLayout>