<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".telangana.Adilabad.places.Hotelskawal">

    <TextView
        android:id="@+id/hotel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:elevation="1dp"
        android:textAlignment="center"
        android:text="Hotels"
        android:textColor="#123"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center_horizontal">

    </TextView>

    <ImageView
        android:id="@+id/back4"
        android:layout_width="30dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="30dp"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginLeft="40dp">

    </ImageView>


    <AdapterViewFlipper
        android:id="@+id/adpterview"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/hotel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp">

    </AdapterViewFlipper>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/adpterview"
        style="@style/scrollbar_shape_style"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1sp"
                android:layout_marginBottom="10dp"
                android:transitionName="@string/pressed5"
                android:background="@drawable/states">


                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="170dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/hote">

                </ImageView>


                <TextView

                    android:layout_width="180dp"
                    android:layout_height="wrap_content"

                    android:text="Hotel Sankalp"
                    android:layout_marginStart="20sp"
                    android:textAlignment="viewStart"
                    android:textColor="#123"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat">

                </TextView>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="A/C"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="-178dp"
                    android:textAlignment="viewStart"
                    android:textColor="#123"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    tools:ignore="RtlCompat">

                </TextView>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Warangal-Hyderabad Road,, 508116 India"
                    android:textAlignment="viewStart"
                    android:textColor="#123"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="-80dp"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    tools:ignore="RtlCompat">

                </TextView>


            </LinearLayout>






        </LinearLayout>

    </ScrollView>


</RelativeLayout>