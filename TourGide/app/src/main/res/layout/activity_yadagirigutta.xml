<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/scrollbar_shape_style"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".telangana.yadadri.places.Yadagirigutta">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/back3"
            android:layout_width="30dp"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginTop="28dp"
            android:transitionName="@string/pressed4"
            android:elevation="30dp"
            android:layout_marginStart="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_height="30dp"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginLeft="40dp">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:text="YADAGIRIGUTTA "
            android:textColor="#123"
            android:layout_marginStart="60dp"
            android:elevation="3dp"
            android:layout_marginEnd="60dp"
            android:textStyle="bold"
            android:textSize="23dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="-40sp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:gravity="center_horizontal">

        </TextView>

        <AdapterViewFlipper
            android:id="@+id/adpterview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="20dp"
            android:transitionName="@string/kawaliflipper"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            tools:targetApi="lollipop">

        </AdapterViewFlipper>
        <TextView
            android:layout_width="match_parent"
            android:text="History:"
            android:textColor="#123"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textSize="17dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content">

        </TextView>


        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="200dp">
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:text="Lord Narasimha, a reincarnation of Lord Vishnu, appeared in front of Yadarishi in five different forms- Sri Jwalanarasimha, Sri Yogananda, Sri Gandabherunda, Sri Ugra and Sri Lakshminarasimha. Mesmerized and hypnotized by the Lord's presence, Yadarishi pleaded god to stay like this with him forever. The lord complied and manifested himself into the walls of the caves in the five forms he appeared in. "
                    android:textColor="#123"
                    android:textAlignment="textStart"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                </TextView>

            </ScrollView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/direction"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/states"
                android:backgroundTint="@color/white1"
                android:elevation="20dp"
                app:srcCompat="@drawable/ic_baseline_directions_24"
                tools:ignore="VectorDrawableCompat"
                tools:targetApi="lollipop">

            </ImageView>

            <ImageView
                android:id="@+id/hotels"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/states"
                android:backgroundTint="@color/white1"
                android:elevation="20sp"
                android:transitionName="@string/pressed4"
                app:srcCompat="@drawable/ic_baseline_house_24"
                tools:ignore="VectorDrawableCompat">

            </ImageView>

            <ImageView
                android:id="@+id/share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/states"
                android:backgroundTint="@color/white1"
                android:elevation="20sp"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/ic_baseline_share_24"
                tools:ignore="VectorDrawableCompat">

            </ImageView>
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:text="Details:"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#123"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content">

        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:text="Weather : 40Â° C"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#123"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:text="tIMINGS: Morning:
4:00 AM to 4:30 AM- Suprabhatam
4:30 AM to 5:00 AM- Binde teertam
5:00 AM to 5:30 AM- Bala Bogam
5:30 AM to 6:30 AM- Nijabhishekam
6:30 AM to 7:15 AM- Archna
7:15 AM to 11:30 AM- Darshnamas (All)
11:30 AM to 12:30 AM- Maharaja Bogamu
12:30 AM to 3:00 PM- Darshanams
3:00 PM to 4:00 PM- Dwarabandanam

Evening:
4:00 PM to 5:00 PM- Special Darshnams
5:00 PM to 7:00 PM- Darshnamas (All)
7:00 PM to 7:30 PM- Aaradhana
7:30 PM to 8:15 PM- Archana
8:15 PM to 9:00 PM- Darshnamas (All)
9:00 PM to 9:30 PM- Maha nivedhana
9:30 PM to 9:45 PM- Shayanostavams
9:45 PM- Temple closes down
"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#123"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="PRASADAM RATES:
Pulihora- INR 5
Dadyodanam- INR 3
Laddu- INR 10
Vada- INR 8
"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#123"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/hotel"
            android:text="Gallery:"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#123"
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:gravity="start">

        </TextView>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/viewpager"
            android:layout_height="300dp">
        </androidx.viewpager.widget.ViewPager>






        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_above="@id/continues"
            android:id="@+id/viewpager1"
            android:layout_height="300dp">
        </androidx.viewpager.widget.ViewPager>




    </LinearLayout>

</ScrollView>