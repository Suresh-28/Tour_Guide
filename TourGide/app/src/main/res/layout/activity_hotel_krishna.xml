<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".telangana.Adilabad.places.place.HotelKrishna">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back5"
            android:layout_width="30dp"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginTop="28dp"
            android:layout_marginStart="10dp"
            android:elevation="20dp"
            android:transitionName="@string/pressed6"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_height="30dp"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginLeft="40dp">

        </ImageView>

        <AdapterViewFlipper
            android:id="@+id/adpterview"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="250dp">

        </AdapterViewFlipper>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:text="Hotel New Krishna Lodge"
            android:textAlignment="viewStart"
            android:textColor="#123"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="80dp"

            android:text="Opp Girls High School, Adilabad 504001, India
"
            android:textAlignment="viewStart"
            android:textColor="#123"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:ignore="RtlCompat">

        </TextView>

        <RatingBar
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:rating="4.1">

        </RatingBar>
        <TextView
            android:layout_width="match_parent"
            android:text="4.1"
            android:textColor="#123"
            android:layout_marginTop="-57dp"
            android:layout_marginStart="10dp"
            android:textSize="23dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/direction"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/states"
                android:backgroundTint="@color/white1"
                android:elevation="20dp"
                app:srcCompat="@drawable/ic_baseline_directions_24"
                tools:ignore="VectorDrawableCompat"
                tools:targetApi="lollipop">

            </ImageView>


            <ImageView
                android:id="@+id/website"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/states"
                android:backgroundTint="@color/white1"
                android:elevation="20sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/ic_baseline_web_24"
                tools:ignore="VectorDrawableCompat">

            </ImageView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/states"
                android:backgroundTint="@color/white1"
                android:elevation="20dp"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/ic_baseline_share_24"
                tools:ignore="VectorDrawableCompat">

            </ImageView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:text="Popular amentities"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_baseline_wifi_24"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_baseline_local_parking_24"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="-58dp"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

        </TextView>


        <TextView
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="end"
            android:layout_marginTop="-18dp"
            android:text="Free Wifi"
            android:textColor="@color/black">

        </TextView>


        <TextView
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:gravity="end"
            android:text="Parking"
            android:textColor="@color/black">

        </TextView>




    </LinearLayout>



</ScrollView>